#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#include <unistd.h>
#include <ncurses.h>

//Compile with -lpthread

int num = 0;
char input[2048];

int inChar = -1;
char inVal[4]; 

int main(int argc, char *argv[]){
	initscr();
	cbreak();
	// raw();
	nodelay(stdscr, TRUE);
	noecho();
	keypad(stdscr, TRUE);

	for(;;){
		inChar = getch();
		sprintf(inVal, "%c", inChar);
		if(inChar != -1)
			printw(inVal);
		// else
		// 	printw("!");

		if(inChar == 3) break; //User pressed Ctrl+C
	}

	endwin();
}